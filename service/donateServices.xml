<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-2.1.xsd">


<service verb="create" noun="Person">
    <in-parameters>
    
         <!--mantle.account.PaymentServices.create#Payment--> 
        <parameter name="amount" required="false"/>

        <!--mantle.party.PartyServices.create#Person-->
        <parameter name="firstName" required="false"/>
        <parameter name="middleName" required="false"/>
        <parameter name="lastName" required="false" />
        <!-- <script>
                EntityValue queryForUsername = ec.entity.find("mantle.party.PersonAndUserAccount").condition( [ "username" : username ] ).one()
        </script> -->
        
        
        <!--mantle.party.ContactServices.store#PartyContactInfo-->
        <parameter name="emailAddress" required="false"/>
        <parameter name="contactNumber" required="false"/>
        <parameter name="address1" required="false"/>
        <parameter name="unitNumber" required="false"/>
        <parameter name="city" required="false"/>
        <parameter name="stateProvinceGeold" required="false"/>
        <parameter name="postalCode" required="false"/>
        
        <!--mantle.account.PaymentMethodServices.create#CreditCard-->
        <parameter name="cardNumber" required="false"/>
        <parameter name="expireDate" required="false"/>
        <parameter name="cardSecurityCode" required="false"/>
        


    </in-parameters>

    <out-parameters>
        <parameter name="partyId" />
    </out-parameters>

    <actions>
    
        <service-call name="mantle.account.PaymentServices.create#Payment" in-map="context" out-map="context"/>
        <set field="fromPartyId" from="partyId" />
        <set field="toPartyId" default-value="testing"/>
       
         <service-call name="mantle.party.PartyServices.create#Person" in-map="[partyId:partyId] + context" out-map="context"/>
       
        <service-call name="mantle.party.ContactServices.store#PartyContactInfo" in-map="context" out-map="context"/>

        <service-call name="mantle.account.PaymentMethodServices.create#CreditCard" in-map="context" out-map="context"/>

       
        
        <!-- <service-call name="mantle.product.AssetServices.create#ProductAssetAdHoc" in-map="context" out-map="context"/>  -->

        <!-- <service-call name="Stripe.StripePaymentServices.authorizeAndCapture#Payment" in-map="context" out-map="context"/> -->
        
        <!-- <service-call name="mantle.product.AssetServices.create#ProductAssetAdHoc" in-map="[firstName: personName]"/> -->
        
        
    </actions>
</service>
</services>

