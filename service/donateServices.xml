<services>
<service verb="create" noun="Person">
    <in-parameters>
        <!--<auto-parameters entity-name="mantle.party.Person" include="nonpk"/> -->
        <parameter name="firstNameOnAccount" required="true"/>
        <parameter name="middleNameOnAccount" required="true"/>
        <parameter name="lastNameOnAccount" required="true"/>
        <parameter name="cardNumber" required="true"/>
        <parameter name="expireDate" required="true"/>
        <parameter name="cardSecurityCode" required="true"/>
        <!--from party.contactServices-->
        <parameter name="emailAddress" required="true"/>
        <parameter name="address1" required="true"/>
        <parameter name="unitNumber" required="true"/>
        <parameter name="city" required="true"/>
        <parameter name="stateProvinceGeold" required="true"/>
        <parameter name="postalCode" required="true"/>
        <parameter name="contactNumber" required="true"/>
        <parameter name="acquireCost" required="true"/>


    </in-parameters>

    <out-parameters>

    </out-parameters>

    <actions>
        <!--<log message="AAAAAAAAAAAAAAAAAAAAAAAAAAA"/>-->
        <service-call name="mantle.account.PaymentMethodServices.create#CreditCard" in-map="[partyId:partyId] + context" out-map="context"/>
         <log message="${firstNameOnAccount}"/>
        <service-call name="mantle.party.ContactServices.create#EmailAddress" in-map="[partyId:partyId] + context" out-map="context"/>
        <service-call name="mantle.party.ContactServices.create#PostalAddress" in-map="[partyId:partyId] + context" out-map="context"/>
        <service-call name="mantle.party.ContactServices.create#TelecomNumber" in-map="[partyId:partyId] + context" out-map="context"/>
        <service-call name="mantle.product.AssetServices.create#ProductAssetAdHoc" in-map="[partyId:partyId] + context" out-map="context"/>

       <!-- <set name="personName" fromValue="James"/>
        <set name="personName" from="'James'+ '' +'Dean'"/>

        <service-call name="mantle.product.AssetServices.create#ProductAssetAdHoc" in-map="[firstName: personName]"/> -->

        
    </actions>
</service>
</services>

